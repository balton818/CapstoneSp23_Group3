<UserControl
    x:Class="Team3DesktopApp.View.IngredientExpander"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Team3DesktopApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>


        <Expander
            x:Name="expander"
            Background="#30323d"
            BorderBrush="#FFE8C547"
            IsExpanded="False">
            <Expander.HeaderTemplate>
                <DataTemplate DataType="local:IngredientExpander">
                    <Grid Width="363">
                        <TextBlock
                            x:Name="ingredientHeader"
                            Width="142"
                            HorizontalAlignment="Left"
                            DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type Expander}}}"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#FFE8C547"
                            Text="{Binding IngredientName}" />
                        <TextBlock
                            x:Name="ingredientAmount"
                            Margin="147,0,140,0"
                            DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type Expander}}}"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#FFE8C547"
                            Text="{Binding IngredientAmount}" />
                        <TextBlock
                            x:Name="UnitTextBox"
                            Width="107"
                            Height="20"
                            Margin="246,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type Expander}}}"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#FFE8C547"
                            Text="{Binding IngredientUnit}" />
                    </Grid>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <Grid>
                <Button
                    x:Name="plusButton"
                    Margin="0,0,304,0"
                    Background="#30323d"
                    BorderBrush="#30323d"
                    Click="PlusButton_OnClick"
                    FontSize="30">
                    <Button.Content>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Foreground="#FFE8C547"
                            Text="+" />
                    </Button.Content>
                </Button>
                <Button
                    x:Name="removeButton"
                    Margin="297,0,10,0"
                    Background="#30323d"
                    BorderBrush="#30323d"
                    Click="RemoveButton_OnClick"
                    FontSize="30">
                    <Button.Content>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Foreground="#FFE8C547"
                            Text="x" />
                    </Button.Content>
                </Button>
                <Button
                    x:Name="minusButton"
                    Margin="153,0,153,0"
                    Background="#30323d"
                    BorderBrush="#30323d"
                    Click="MinusButton_OnClick"
                    FontSize="30">
                    <Button.Content>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#FFE8C547"
                            Text="-" />
                    </Button.Content>
                </Button>
            </Grid>

        </Expander>

    </Grid>
</UserControl>