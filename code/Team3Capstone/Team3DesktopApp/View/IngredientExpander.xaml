<UserControl
    x:Class="Team3DesktopApp.View.IngredientExpander"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Team3DesktopApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,10">


        <Expander
            x:Name="expander"
            Background="#30323d"
            IsExpanded="False"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" BorderBrush="#FFE8C547">
            <Expander.HeaderTemplate>
                <DataTemplate DataType="local:IngredientExpander">
                    <Grid>
                        <TextBlock
                            x:Name="ingredientHeader"
                            DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type Expander}}}"
                            FontSize="15"
                            FontWeight="Bold"
                            Text="{Binding IngredientName}"
                            Margin="26,0,-26,0" Foreground="#FFE8C547" />
                        <TextBlock
                            x:Name="ingredientAmount"
                            DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type Expander}}}"
                            Margin="181,0,-180,0"
                            FontSize="15"
                            FontWeight="Bold"
                            Text="{Binding IngredientAmount}"
                            Foreground="#FFE8C547" />
                    </Grid>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <Grid>

                <Button
                    x:Name="plusButton"
                    Margin="0,0,304,0"
                    Background="#30323d"
                    BorderBrush="#30323d"
                    FontSize="30"
                    Click="PlusButton_OnClick">
                    <Button.Content>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Foreground="#FFE8C547"
                            Text="+" />
                    </Button.Content>
                </Button>
                <Button
                    Margin="297,0,10,0"
                    Background="#30323d"
                    BorderBrush="#30323d"
                    FontSize="30"
                    x:Name="removeButton"
                    Click="RemoveButton_OnClick">
                    <Button.Content>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Foreground="#FFE8C547"
                            Text="x" />
                    </Button.Content>
                </Button>
                <Button
                    Margin="153,0,153,0"
                    Background="#30323d"
                    BorderBrush="#30323d"
                    FontSize="30"
                    x:Name="minusButton"
                    Click="MinusButton_OnClick">
                    <Button.Content>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#FFE8C547"
                            Text="-" />
                    </Button.Content>
                </Button>
            </Grid>

        </Expander>

    </Grid>
</UserControl>